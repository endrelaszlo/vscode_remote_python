{
    "editor.tabSize": 4,
    "editor.rulers": [
        100
    ],
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "python.analysis.extraPaths": [
        "/opt/conda/lib/python3.9/site-packages/"
    ],
    // Autocomplete from ros python packages
    "python.autoComplete.extraPaths": [
        "/opt/conda/lib/python3.9/site-packages/"
    ],
    // Environment file lets vscode find python files within workspace
    "python.envFile": "${workspaceFolder}/.env",
    // "python.defaultInterpreterPath": "${env:DEFAULT_INTERPRETER_PATH}",
    "python.defaultInterpreterPath": "/opt/conda/bin/python3",
}
